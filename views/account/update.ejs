<section class="account-card account-card--form" aria-labelledby="account-update-title">
  <header class="account-card__header">
    <h1 id="account-update-title"><%= title %></h1>
    <p class="account-card__subtitle">
      Update your contact details and refresh your password to keep your account secure.
    </p>
  </header>

  <% const flashMessages = messages(); %>
  <% if (flashMessages.trim()) { %>
    <div class="account-card__messages">
      <%- flashMessages %>
    </div>
  <% } %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <div class="account-layout account-layout--split">
    <form class="account-form account-form--profile" action="/account/update" method="post">
      <fieldset>
        <legend>Account details</legend>

      <div class="form-field">
        <label for="account_lastname">Last name</label>
        <input
          type="text"
          id="account_firstname"
          name="account_firstname"
          required
          value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>"
          autocomplete="given-name"
        >
      </div>

      <div class="form-field">
        <label for="account_lastname">Last Name</label>
        <input
          type="text"
          id="account_lastname"
          name="account_lastname"
          required
          value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>"
          autocomplete="family-name"
        >
      </div>

      <div class="form-field">
        <label for="account_email">Email address</label>
        <input
          type="email"
          id="account_email"
          name="account_email"
          required
          value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
          autocomplete="email"
        >
      </div>
    </fieldset>

    <input type="hidden" name="account_id" value="<%= account_id %>">

    <button type="submit" class="button-primary">Save changes</button>
  </form>

  <div class="account-layout__column">
      <form class="account-form account-form--password" action="/account/update/password" method="post">
        <fieldset>
          <legend>Change password</legend>
          <p id="password-requirements" class="form-help">
            Passwords must be at least 12 characters and include a lowercase letter, an uppercase
            letter, a number, and a special character.
          </p>

      <div class="form-field">
            <label for="account_password">New password</label>
            <input
              type="password"
              id="account_password"
              name="account_password"
              required
              minlength="12"
              pattern="^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{12,}$"
              aria-describedby="password-requirements"
              autocomplete="new-password"
            >
          </div>
        </fieldset>

        <input type="hidden" name="account_id" value="<%= account_id %>">

    <button type="submit" class="button-primary">Update password</button>
      </form>

      <aside class="account-tip" aria-label="Security tips">
        <h3>Security tips</h3>
        <ul>
          <li>Use a unique password that you do not share with other accounts.</li>
          <li>Consider a passphrase that combines memorable words with numbers.</li>
          <li>Enable multi-factor authentication wherever it is available.</li>
        </ul>
      </aside>
    </div>
  </div>
</section>