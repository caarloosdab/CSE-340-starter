<section class="account-card" aria-labelledby="account-management-title">
  <h1 id="account-management-title"><%= title %></h1>

  <% const flashMessages = messages(); %>
  <% if (flashMessages.trim()) { %>
    <div class="account-card__messages">
      <%- flashMessages %>
    </div>
  <% } %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (account) { %>
    <h2>Welcome <%= account.account_firstname %></h2>
    <p class="account-card__link">
      <a href="/account/update/<%= account.account_id %>">Update account information</a>
    </p>

    <% if (["Employee", "Admin"].includes(account.account_type)) { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/">Manage Inventory</a>
      </p>
    <% } %>
  <% } %>
</section>